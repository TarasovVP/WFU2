<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Purple"
        tools:layout_width="match_parent">

        <TextView
            android:id="@+id/date"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/city"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="124dp"
            android:layout_marginLeft="124dp"
            android:layout_marginBottom="-105dp"
            android:text="@string/_11_2018_n17_30"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/city"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="26dp"
            android:text="@string/city"
            android:textColor="@color/White"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="76dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="153dp"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="115dp"
            android:text="@string/_3"
            android:textColor="@color/White"
            android:textSize="36sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="151dp"
            android:layout_marginLeft="151dp"
            android:layout_marginBottom="210dp" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Purple"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/Hours1"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="horizontal"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content">

            <TextView
                android:id="@+id/tempHour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_3" />

            <TextView
                android:id="@+id/cloudHour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/cloud" />

            <TextView
                android:id="@+id/Hour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/_12" />
        </TableLayout>

        <TableRow
            android:id="@+id/Hours2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour2"
                android:text="@string/_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour2"
                android:text="@string/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour2"
                android:text="@string/_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content">

            <TextView
                android:id="@+id/tempHour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_" />

            <TextView
                android:id="@+id/cloudHour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cloud" />

            <TextView
                android:id="@+id/Hour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_14" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour4"
                android:text="@string/_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour4"
                android:text="@string/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour4"
                android:text="@string/_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour5"
                android:text="@string/_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour5"
                android:text="@string/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour5"
                android:text="@string/_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour6"
                android:text="@string/_1_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour6"
                android:text="@string/cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour6"
                android:text="@string/_17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>


</LinearLayout>