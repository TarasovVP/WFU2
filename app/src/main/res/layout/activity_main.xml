<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_width="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Purple"
        tools:layout_width="match_parent">

        <TextView
            android:id="@+id/date"
            android:text="11 ноября 2018\n17:30"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:layout_above="@+id/city"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="147dp"
            android:layout_marginLeft="147dp"
            android:layout_marginBottom="-82dp" />

        <TextView
            android:id="@+id/city"
            android:text="Днепр"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="126dp"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="37dp" />

        <TextView
            android:id="@+id/temperature"
            android:text="-3"
            android:layout_width="76dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="145dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="107dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-58dp"
            android:layout_marginBottom="226dp"
            android:layout_toEndOf="@+id/date"
            android:layout_marginLeft="-58dp"
            android:layout_toRightOf="@+id/date" />
    </RelativeLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Purple"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/Hours1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="horizontal"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content">

            <TextView
                android:id="@+id/tempHour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-3" />

            <TextView
                android:id="@+id/cloudHour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Облачно" />

            <TextView
                android:id="@+id/Hour1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="12" />
        </TableLayout>

        <TableRow
            android:id="@+id/Hours2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour2"
                android:text="+2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour2"
                android:text="Облачно"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour2"
                android:text="13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical"
            tools:layout_height="wrap_content"
            tools:layout_width="wrap_content">

            <TextView
                android:id="@+id/tempHour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3" />

            <TextView
                android:id="@+id/cloudHour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Облачно" />

            <TextView
                android:id="@+id/Hour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour4"
                android:text="-1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour4"
                android:text="Облачно"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour4"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour5"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour5"
                android:text="Облачно"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour5"
                android:text="16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:id="@+id/Hours6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/DarkPurple"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tempHour6"
                android:text="+1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/cloudHour6"
                android:text="Облачно"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Hour6"
                android:text="17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

    </TableLayout>


</LinearLayout>